{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ESNext",
        "allowJs": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react-jsx",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}